{
  "name": "react-server-side-rendering-sandbox",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "start": "node web/server/index.js",
    "start:dev:server": "nodemon --nolazy --inspect-brk --watch web/server --watch web/app web/server/index.js",
    "dev": "npm-run-all --parallel build:app:js:watch build:server:js:watch build:site:watch start:dev:server",
    "build:site": "cd packages/app && npm install && npm run build",
    "build:site:watch": "cd packages/app && npm run build:watch",
    "build:app:js": "babel packages/app/src --out-dir web/app --source-maps",
    "build:app:js:watch": "babel packages/app/src --out-dir web/app --source-maps --watch",
    "build:server:js": "babel packages/server --out-dir web/server --source-maps",
    "build:server:js:watch": "babel packages/server --out-dir web/server --source-maps --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "copyfiles": "^2.2.0",
    "jest": "^25.1.0",
    "jest-chain": "^1.1.5",
    "jest-extended": "^0.11.5",
    "lerna": "^3.20.2",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "snowpack": "^1.6.0"
  },
  "dependencies": {
    "0http": "^2.2.3",
    "pm2": "^4.2.3",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-router-dom": "^5.1.2",
    "serve-static": "^1.14.1"
  },
  "snowpack": {
    "webDependencies": [
      "react",
      "react-dom",
      "react-router-dom"
    ],
    "installOptions": {
      "dest": "web/site/modules",
      "clean": true,
      "optimize": true,
      "sourceMap": true,
      "remotePackage": [
        "react@npm:@pika/react^16.12.0",
        "react-dom@npm:@pika/react-dom^16.12.0"
      ],
      "remoteUrl": "https://cdn.pika.dev"
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./jest.config.js"
    ]
  }
}
