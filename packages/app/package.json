{
  "name": "app",
  "version": "0.0.1",
  "scripts": {
    "build": "npm-run-all prepare:modules copy:modules build:js",
    "build:watch": "npm-run-all prepare:modules copy:modules build:js:watch",
    "build:js": "babel src --out-dir ../../web/site/app --source-maps",
    "build:js:watch": "babel src --out-dir ../../web/site/app --source-maps --watch",
    "prepare:modules": "snowpack --dest modules",
    "copy:modules": "copyfiles -a ./modules/**/* ../../web/site"
  },
  "dependencies": {
    "react": "npm:@pika/react@^16.12.0",
    "react-dom": "npm:@pika/react-dom@^16.12.0",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "copyfiles": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "snowpack": "^1.6.0"
  }
}
